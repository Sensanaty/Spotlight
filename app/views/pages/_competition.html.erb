<div class="card mb-3" style = "width:600px;">
  <div class="row no-gutters" style = "height:170px;">
    <div>
      <img style = "height: 170px; width:170px; object-fit: cover"src="https://i.pinimg.com/564x/2c/b5/23/2cb5238a1f642f8926d52c06713b9093.jpg" class="card-img" alt="...">
    </div>
    <div class="col-md-8">
      <div class="card-body" style ="width: 428px;">
        <div class = "d-flex justify-content-between pb-2">
          <h5 class="card-title my-auto" style="width:68%"><%= competitor[:name] %></h5>
          <div class = "px-2">
            <% 3.times do  %>
            <span class="fa fa-star checked" style="color: #F5A431"></span>
            <% end %>
            <% (5 - 3).times do %>
            <span class="fa fa-star" style="color: #CDCDCD"></span>
            <% end %>
          </div>
        </div>
        <div class = "d-flex align-items-center">
          <ul>
            <li>Total ratings = 201</li>
            <li>Price level = $$$</li>
            <li>Type = restaurant, food, point of interest </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
