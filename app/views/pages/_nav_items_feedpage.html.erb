<script>
  // This script makes sure the selected options of the rating filter become highlighted.
  const buttons = document.querySelectorAll(".form-filter-label")
  buttons.forEach((button) => {
    button.addEventListener("click", (event) =>{
      event.currentTarget.classList.toggle("label-selected")

    })
  })

</script>



