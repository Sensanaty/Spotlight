      </li>
    </ul>
    <div style = "margin-top: auto;">
      <%= form_tag dashboard_feed_path, method: :get do |f| %>
        <div class="dropdown">
        <button class="btn btn-secondary dropdown-toggle filter-dropdown spotlight-green-br" style = "height:40px; background-color: #1EDD88; border-style: none;" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          Filter by rating
        </button>
          <div class="dropdown-menu filter-dropdown-menu" aria-labelledby="dropdownMenuButton">
            <% for i in (1..5) %>
              <input hidden id="checkbox-<%= i %>" type="checkbox" value="<%= i %>" name="rating[]">
              <label for="checkbox-<%= i %>" class="dropdown-item btn form-filter-label">
                <% i.times do %>
                  <span class="fa fa-star" style="color: #F5A431"></span>
                <% end %>
              </label>
            <% end %>
            <%= submit_tag 'save', :class => "btn-primary", :style=>"font-size: 20px; width:100%" %>
          </div>
        </div>
    </div>
  </div>
