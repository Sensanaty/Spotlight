<% if !@restaurant %>
  <%= render 'shared/no_restaurant_display' %>
<% else %>
  <div class="h-200 d-flex justify-content-around flex-row mx-auto dash-sum-box">
    <div class="container">
      <h3>Performance Overview</h3>
      <h5><strong><%= @restaurant.name.upcase if @restaurant %></strong></h5>
      <div class="d-flex">
        <div class="google-chart-1" style="width: 200px">
          <!-- Google Chart 1 -->
          <canvas id="googleReviewsCountChart" width="180" height="200"></canvas>
        </div>
      </div>
    </div>
  </div>

  <div class="container pb-4">
    <!-- Summary box -->

     <!-- ROW 1 -->
    <div class="row d-flex justify-content-around py-2">
      <!-- Google card -->
      <div class="card shadow h-200 p-2 d-flex flex-row dash-card position-relative">
          <%= image_tag 'google-logo.png', class: 'logo-button-white-lg' %>
          <div class="google-chart-2" style="width: 300px">
            <!-- Google Chart 2 -->
            <canvas id="googleReviewsRatingsChart" width="200" height="200"></canvas>
          </div>
      </div>
      <!-- Zomato card -->
      <%= render 'shared/add_channel_card', channel_name: 'Zomato', channel_logo: 'zomato-logo.png', channel_color: '#fcdce1', restaurant_name: @restaurant.name %>
    </div>

    <!-- ROW 2 -->
    <div class="row d-flex justify-content-around py-2">
      <!-- Yelp card -->
      <%= render 'shared/add_channel_card', channel_name: 'Yelp', channel_logo: 'yelp-logo.png', channel_color: '#f5d5d5', restaurant_name: @restaurant.name %>
      <!-- Tripadvisor card -->
      <%= render 'shared/add_channel_card', channel_name: 'Trip Advisor', channel_logo: 'trip-advisor-logo.png', channel_color: '#dcf0da', restaurant_name: @restaurant.name %>
    </div>

     <!-- ROW 3 -->
    <div class="row d-flex justify-content-around py-2">
      <!-- FB card -->
      <%= render 'shared/add_channel_card', channel_name: 'Facebook', channel_logo: 'facebook-logo.png', channel_color: '#d5dff5', restaurant_name: @restaurant.name %>
      <!-- Insta card -->
      <%= render 'shared/add_channel_card', channel_name: 'Instagram', channel_logo: 'instagram-logo.png', channel_color: '#d9d5f5', restaurant_name: @restaurant.name %>
    </div>

  </div>
  <%= javascript_pack_tag 'charts' %>
  <%= javascript_pack_tag 'dashboard' %>
<% end %>
