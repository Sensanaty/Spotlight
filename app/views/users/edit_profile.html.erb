<div class="container">
  <div class="row">
    <div class="col-md-12 col-lg-6">
      <div class="d-flex justify-content-between">
        <h1>Edit profile</h1>
        <%= link_to "Change Password", edit_user_registration_path, class: 'btn-flat' %>
      </div>
      <%= simple_form_for @user do |f| %>
        <%= f.input :email %>
        <%= f.input :first_name %>
        <%= f.input :last_name %>
        <%= f.input :photo,
                    label: 'Profile Photo',
                    required: false,
                    autofocus: false %>
        <%= f.input :photo_cache, as: :hidden %>
        <%= f.button :submit, class: 'btn-flat' %>
      <% end %>
    </div>
    <% unless !@restaurant %>
      <div class="col-md-12 col-lg-6">
        <h1>Edit restaurant</h1>
         <%= simple_form_for @restaurant do |f| %>
          <%= f.input :name %>
          <%= f.input :address %>
          <%= f.input :cuisine %>
          <%= f.input :price_level %>
          <%= f.input :photo %>
          <%= f.input :photo_cache, as: :hidden %>
          <%= f.button :submit, class: 'btn-flat' %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

